	<?php if (count($song->comments) > 0): ?>
		<h2>Comments:</h2>
		<ul>
			<?php foreach ($song->comments as $comment): ?>
				<li><?php echo HTML::linkRoute('userProfile', $comment->user->username , array($comment->user->username)); ?></li>
