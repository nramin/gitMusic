	<?php if (Auth::user()): ?>
		<?php if (Auth::user()->likes_song($song->getId())): ?>
			<h4>You like it also</h4>
		<?php else: ?>
			<button>Like it!</button>
		<?php endif; ?>
	<?php else: ?> 
		<button>Signup to Like it!</button>
	<?php endif; ?>
	
